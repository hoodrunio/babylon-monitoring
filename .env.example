# MongoDB Bağlantı Bilgileri
MONGODB_URI=mongodb://localhost:27017/babylon-monitoring

# Babylon Ağları
MAINNET_RPC_URLS=http://mainnet-rpc1.babylon.com:26657,http://mainnet-rpc2.babylon.com:26657
MAINNET_REST_URLS=http://mainnet-lcd1.babylon.com:1317,http://mainnet-lcd2.babylon.com:1317

TESTNET_RPC_URLS=http://testnet-rpc1.babylon.com:26657,http://testnet-rpc2.babylon.com:26657
TESTNET_REST_URLS=http://testnet-lcd1.babylon.com:1317,http://testnet-lcd2.babylon.com:1317

# İzleme Ayarları
MONITORING_ENABLED=true
FINALITY_PROVIDER_MONITORING_ENABLED=true
VALIDATOR_SIGNATURE_MONITORING_ENABLED=true
BLS_SIGNATURE_MONITORING_ENABLED=true
MONITORING_INTERVAL_MS=60000
FINALIZED_BLOCKS_WAIT=3

# Telegram Bildirim Bilgileri
TELEGRAM_ENABLED=true
MAINNET_TELEGRAM_BOT_TOKEN=your_mainnet_bot_token
MAINNET_TELEGRAM_CHAT_ID=your_mainnet_chat_id
TESTNET_TELEGRAM_BOT_TOKEN=your_testnet_bot_token
TESTNET_TELEGRAM_CHAT_ID=your_testnet_chat_id

# PagerDuty Bildirim Bilgileri
PAGERDUTY_ENABLED=true
MAINNET_PAGERDUTY_INTEGRATION_KEY=your_mainnet_pagerduty_key
TESTNET_PAGERDUTY_INTEGRATION_KEY=your_testnet_pagerduty_key

# İzlenen Validator ve Finality Provider İmzalar
# Boş bırakılırsa tüm validator/finality provider'lar izlenir
# Virgülle ayrılmış bir liste olarak belirtilebilir
TRACKED_VALIDATORS=
TRACKED_FINALITY_PROVIDERS=

# Bildirim Eşikleri
VALIDATOR_SIGNATURE_THRESHOLD=90
FINALITY_PROVIDER_SIGNATURE_THRESHOLD=90
BLS_SIGNATURE_THRESHOLD=90 